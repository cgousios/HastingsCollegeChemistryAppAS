<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="30sp"
            >
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/FunctionBox"/>
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="40sp"
                >
            <TextView
                    android:layout_width="150sp"
                    android:layout_height="match_parent"
                    android:text=""
                    android:id="@+id/lblCombinedP1"
                    android:textSize="20sp"/>
            <EditText
                    android:layout_width="160sp"
                    android:layout_height="match_parent"
                    android:id="@+id/txtCombinedP1"
                    android:textColor="#ffffffff"
                    android:inputType="numberDecimal"/>
            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:text="atm"
                    android:textSize="20sp"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="40sp"
                >
            <TextView
                    android:layout_width="150sp"
                    android:layout_height="match_parent"
                    android:text=""
                    android:id="@+id/lblCombinedV1"
                    android:textSize="20sp"/>
            <EditText
                    android:layout_width="160sp"
                    android:layout_height="match_parent"
                    android:id="@+id/txtCombinedV1"
                    android:textColor="#ffffffff"
                    android:inputType="numberDecimal"/>
            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:text="L"
                    android:textSize="20sp"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="40sp"
                >
            <TextView
                    android:layout_width="150sp"
                    android:layout_height="match_parent"
                    android:text=""
                    android:id="@+id/lblCombinedT1"
                    android:textSize="20sp"/>
            <EditText
                    android:layout_width="160sp"
                    android:layout_height="match_parent"
                    android:id="@+id/txtCombinedT1"
                    android:textColor="#ffffffff"
                    android:inputType="numberDecimal"/>
            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:text="K"
                    android:textSize="20sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="40sp"
            >
        <TextView
                android:layout_width="150sp"
                android:layout_height="match_parent"
                android:text=""
                android:id="@+id/lblCombinedP2"
                android:textSize="20sp"/>
        <EditText
                android:layout_width="160sp"
                android:layout_height="match_parent"
                android:id="@+id/txtCombinedP2"
                android:textColor="#ffffffff"
                android:inputType="numberDecimal"/>
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:text="atm"
                android:textSize="20sp"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="40sp"
            >
        <TextView
                android:layout_width="150sp"
                android:layout_height="match_parent"
                android:text=""
                android:id="@+id/lblCombinedV2"
                android:textSize="20sp"/>
        <EditText
                android:layout_width="160sp"
                android:layout_height="match_parent"
                android:id="@+id/txtCombinedV2"
                android:textColor="#ffffffff"
                android:inputType="numberDecimal"/>
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:text="L"
                android:textSize="20sp"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="40sp"
            >
        <TextView
                android:layout_width="150sp"
                android:layout_height="match_parent"
                android:text=""
                android:id="@+id/lblCombinedT2"
                android:textSize="20sp"/>
        <EditText
                android:layout_width="160sp"
                android:layout_height="match_parent"
                android:id="@+id/txtCombinedT2"
                android:textColor="#ffffffff"
                android:inputType="numberDecimal"/>
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:text="K"
                android:textSize="20sp"/>
    </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="40sp"
                android:gravity="center"
                >
            <Button
                    android:layout_width="175sp"
                    android:layout_height="60sp"
                    android:text="@string/strCompute"
                    android:textSize="30sp"
                    android:id="@+id/btnCompute"
                    />
        </LinearLayout>



    </LinearLayout>

</LinearLayout>