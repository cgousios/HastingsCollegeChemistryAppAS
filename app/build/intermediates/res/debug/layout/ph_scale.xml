<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="30sp"
            >

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="pH = -log(M)"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/FunctionBox"/>
    </LinearLayout>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="30sp"
            >

        <TextView
                android:layout_width="150sp"
                android:layout_height="match_parent"
                android:text="Concentration"
                android:textSize="20sp"/>

        <EditText
                android:layout_width="175sp"
                android:layout_height="match_parent"
                android:id="@+id/pH_scale_concentration"
                android:textColor="#ffffffff"
                android:inputType="numberDecimal"/>

        <TextView
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:text="M"
                android:textSize="20sp"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="30sp"
            >

        <TextView
                android:layout_width="150sp"
                android:layout_height="match_parent"
                android:text="pH"
                android:textSize="20sp"/>

        <EditText
                android:layout_width="175sp"
                android:layout_height="match_parent"
                android:id="@+id/pH_scale_pH"
                android:textColor="#ffffffff"
                android:inputType="numberDecimal"/>

        <TextView
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:text=""
                android:textSize="20sp"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="30sp"
            android:gravity="center"
            >

        <Button
                android:layout_width="175sp"
                android:layout_height="60sp"
                android:text="@string/strCompute"
                android:textSize="30sp"
                android:id="@+id/btnCompute"
                />
    </LinearLayout>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20sp"
            >

        <TextView
                android:layout_width="150sp"
                android:layout_height="match_parent"
                android:text="Concentration"
                android:textSize="20sp"/>

        <EditText
                android:layout_width="175sp"
                android:layout_height="match_parent"
                android:id="@+id/pH_scale_concentration2"
                android:textColor="#ffffffff"
                android:inputType="numberDecimal"/>

        <TextView
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:text="M"
                android:textSize="20sp"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="30sp"
            >

        <TextView
                android:layout_width="150sp"
                android:layout_height="match_parent"
                android:text="pOH"
                android:textSize="20sp"/>

        <EditText
                android:layout_width="175sp"
                android:layout_height="match_parent"
                android:id="@+id/pH_scale_pOH"
                android:textColor="#ffffffff"
                android:inputType="numberDecimal"/>

        <TextView
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:text=""
                android:textSize="20sp"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="30sp"
            android:gravity="center"
            >

        <Button
                android:layout_width="175sp"
                android:layout_height="60sp"
                android:text="@string/strCompute"
                android:textSize="30sp"
                android:id="@+id/btnCompute2"
                />
    </LinearLayout>

</LinearLayout>



